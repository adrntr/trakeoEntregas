<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">70dp</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>

    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">60dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ffffff</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#00ff33</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#3ae5ff</item>
    </style>


    <style name="SCBSwitchMenu" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ff0000</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF0000
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#ffffff</item>
    </style>


</resources>
